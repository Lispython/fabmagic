upstream  backend_{{ project_name }}  {
    server   unix:///tmp/{{ project_name }}.sock;
}

server {
  listen {{ server_ip }}:80 default;

  server_name ~^(?<multiqa_server_name>.+);
  set $project_root "{{ current }}";
  root $project_root/root;

  log_format extended '[$host] $remote_addr - $remote_user [$time_local] "$request" $status $body_bytes_sent "$http_referer" "$http_user_agent"';

  error_log /var/log/nginx/{{ site_name }}.error.log;
  access_log /var/log/nginx/{{ site_name }}.access.log;
  access_log /var/log/nginx/{{ site_name }}.access.ext.log extended;


  gzip             on;
  gzip_min_length  1000;
  gzip_proxied     expired no-cache no-store private auth;

  location ~* ^.+\.(ico|txt)$ {

	root $project_root/root;
  }


  location / {
  	uwsgi_pass backend_{{ project_name }};

    include multiqa_uwsgi_params;
    ##uwsgi_param UWSGI_PYHOME $project_root/venv;
  }
  location /media {
  {% if media_root %}
    root {{ media_root }};
	{% else %}
	root $project_root;
	{% endif %}
  }
  #location /static/admin {
  #  alias $project_root/venv/src/django/django/contrib/admin/static/admin/;
  #}

  #location /static/admin {
  #alias $project_root/venv/lib/python2.6/site-packages/django/contrib/admin/static/admin/;
  #}
  # django 1.3
  location /static/admin {
    alias $project_root/venv/lib/python2.6/site-packages/django/contrib/admin/media;
  }

  location /static {
    root $project_root;
  }
  location /admin-media {
    alias $project_root/venv/src/django/django/contrib/admin/media/;
  }
}

